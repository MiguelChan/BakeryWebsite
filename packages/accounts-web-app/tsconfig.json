{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "build",
        "module": "ESNext",
        "target": "ES5",
        "lib": [
            "ES6",
            "DOM",
            "ES2016",
            "ES2017"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node", "jest", "@types/jest", "@types/node"]
    },
    "include": [
        "src/**/*",
        "./jest-setup.ts",
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx",
        "src/**/*.tests.tsx"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
  }